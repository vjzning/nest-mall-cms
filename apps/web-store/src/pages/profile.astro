---
import Layout from "../layouts/Layout.astro";
import { actions } from "astro:actions";
import { getSession } from "../lib/session";

// 检查认证
const session = await getSession(Astro);
if (!session) {
  return Astro.redirect("/login");
}

const { user } = session;

const result = Astro.getActionResult(actions.auth.updateProfile);
let errorMessage: string | null = null;
let successMessage: string | null = null;

if (result) {
  if (result.data?.success) {
    successMessage = "个人信息更新成功！";
  } else if (result.error) {
    errorMessage = result.error.message || "更新失败，请重试";
  }
}
---

<Layout title="个人中心">
  <div class="min-h-screen py-10 bg-nike-grey">
    <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
        <!-- Sidebar -->
        <div class="md:col-span-1">
          <div class="p-6 bg-white rounded-lg shadow-lg">
            <div class="mb-6 text-center">
              <div
                class="flex items-center justify-center w-24 h-24 mx-auto mb-4 overflow-hidden rounded-full bg-nike-grey"
              >
                {
                  user.avatar ? (
                    <img
                      src={user.avatar}
                      alt={user.nickname}
                      class="object-cover w-full h-full"
                    />
                  ) : (
                    <span class="text-3xl font-bold uppercase">
                      {user.nickname?.charAt(0) || "U"}
                    </span>
                  )
                }
              </div>
              <h2 class="text-xl font-bold">{user.nickname}</h2>
              <p class="text-sm text-nike-dark-grey">@{user.username}</p>
            </div>

            <nav class="space-y-2">
              <a
                href="/profile"
                class="block px-4 py-2 text-white rounded bg-nike-black"
              >
                个人信息
              </a>
              <a
                href="/orders"
                class="block px-4 py-2 transition-colors rounded text-nike-black hover:bg-nike-grey"
              >
                我的订单
              </a>
              <a
                href="/favorites"
                class="block px-4 py-2 transition-colors rounded text-nike-black hover:bg-nike-grey"
              >
                我的收藏
              </a>
              <a
                href="/addresses"
                class="block px-4 py-2 transition-colors rounded text-nike-black hover:bg-nike-grey"
              >
                收货地址
              </a>
              <form method="POST" action={actions.auth.logout}>
                <button
                  type="submit"
                  class="w-full px-4 py-2 text-left text-red-600 transition-colors rounded hover:bg-nike-grey"
                >
                  退出登录
                </button>
              </form>
            </nav>
          </div>
        </div>

        <!-- Main Content -->
        <div class="md:col-span-2">
          <div class="p-6 bg-white rounded-lg shadow-lg">
            <h3 class="mb-6 text-2xl font-bold">个人信息</h3>

            {
              errorMessage && (
                <div class="px-4 py-3 mb-4 text-red-600 border border-red-200 rounded bg-red-50">
                  {errorMessage}
                </div>
              )
            }

            {
              successMessage && (
                <div class="px-4 py-3 mb-4 text-green-600 border border-green-200 rounded bg-green-50">
                  {successMessage}
                </div>
              )
            }

            <form
              method="POST"
              action={actions.auth.updateProfile}
              class="space-y-6"
            >
              <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                <div>
                  <label class="block mb-2 text-sm font-medium text-nike-black">
                    用户名
                  </label>
                  <input
                    type="text"
                    value={user.username}
                    disabled
                    class="w-full px-3 py-2 border rounded border-nike-grey bg-gray-50 text-nike-dark-grey"
                  />
                  <p class="mt-1 text-xs text-nike-dark-grey">用户名不可修改</p>
                </div>

                <div>
                  <label
                    for="nickname"
                    class="block mb-2 text-sm font-medium text-nike-black"
                  >
                    昵称
                  </label>
                  <input
                    id="nickname"
                    name="nickname"
                    type="text"
                    value={user.nickname || ""}
                    class="w-full px-3 py-2 border rounded border-nike-grey focus:ring-2 focus:ring-nike-black focus:border-nike-black"
                  />
                </div>

                <div>
                  <label
                    for="email"
                    class="block mb-2 text-sm font-medium text-nike-black"
                  >
                    邮箱
                  </label>
                  <input
                    id="email"
                    name="email"
                    type="email"
                    value={user.email || ""}
                    class="w-full px-3 py-2 border rounded border-nike-grey focus:ring-2 focus:ring-nike-black focus:border-nike-black"
                  />
                </div>

                <div>
                  <label
                    for="phone"
                    class="block mb-2 text-sm font-medium text-nike-black"
                  >
                    手机号
                  </label>
                  <input
                    id="phone"
                    name="phone"
                    type="tel"
                    pattern="[0-9]{11}"
                    value={user.phone || ""}
                    class="w-full px-3 py-2 border rounded border-nike-grey focus:ring-2 focus:ring-nike-black focus:border-nike-black"
                  />
                </div>
              </div>

              <div>
                <label
                  for="avatar"
                  class="block mb-2 text-sm font-medium text-nike-black"
                >
                  头像 URL
                </label>
                <input
                  id="avatar"
                  name="avatar"
                  type="url"
                  value={user.avatar || ""}
                  placeholder="https://example.com/avatar.jpg"
                  class="w-full px-3 py-2 border rounded border-nike-grey focus:ring-2 focus:ring-nike-black focus:border-nike-black"
                />
              </div>

              <div class="flex justify-end">
                <button
                  type="submit"
                  class="px-6 py-3 font-bold text-white uppercase transition-colors rounded bg-nike-black hover:bg-gray-800"
                >
                  保存修改
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
