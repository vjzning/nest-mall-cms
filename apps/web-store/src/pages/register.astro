---
import Layout from "../layouts/Layout.astro";
import { actions } from "astro:actions";
import { getSession } from "../lib/session";

// 如果已登录,重定向到首页
const session = await getSession(Astro);
if (session) {
  return Astro.redirect("/");
}

const result = Astro.getActionResult(actions.auth.register);
let errorMessage: string | null = null;

if (result && !result.data?.success) {
  errorMessage = result.error?.message || "注册失败，请重试";
}

// 注册成功，重定向
if (result?.data?.success) {
  return Astro.redirect("/");
}
---

<Layout title="注册">
  <div
    class="flex items-center justify-center min-h-screen px-4 py-12 bg-nike-grey sm:px-6 lg:px-8"
  >
    <div class="w-full max-w-md p-10 space-y-8 bg-white rounded-lg shadow-lg">
      <div>
        <h2
          class="text-4xl italic font-black tracking-tighter text-center uppercase"
        >
          注册
        </h2>
        <p class="mt-2 text-sm text-center text-nike-dark-grey">
          已有账号？
          <a href="/login" class="font-medium text-nike-black hover:underline">
            立即登录
          </a>
        </p>
      </div>

      {
        errorMessage && (
          <div class="px-4 py-3 text-red-600 border border-red-200 rounded bg-red-50">
            {errorMessage}
          </div>
        )
      }

      <form method="POST" action={actions.auth.register} class="mt-8 space-y-6">
        <div class="space-y-4">
          <div>
            <label
              for="username"
              class="block mb-1 text-sm font-medium text-nike-black"
            >
              用户名 <span class="text-red-500">*</span>
            </label>
            <input
              id="username"
              name="username"
              type="text"
              required
              minlength="3"
              maxlength="20"
              class="relative block w-full px-3 py-3 placeholder-gray-400 border appearance-none border-nike-grey text-nike-black focus:outline-none focus:ring-2 focus:ring-nike-black focus:border-nike-black sm:text-sm"
              placeholder="3-20个字符"
            />
          </div>

          <div>
            <label
              for="password"
              class="block mb-1 text-sm font-medium text-nike-black"
            >
              密码 <span class="text-red-500">*</span>
            </label>
            <input
              id="password"
              name="password"
              type="password"
              required
              minlength="6"
              class="relative block w-full px-3 py-3 placeholder-gray-400 border appearance-none border-nike-grey text-nike-black focus:outline-none focus:ring-2 focus:ring-nike-black focus:border-nike-black sm:text-sm"
              placeholder="至少6个字符"
            />
          </div>

          <div>
            <label
              for="email"
              class="block mb-1 text-sm font-medium text-nike-black"
            >
              邮箱
            </label>
            <input
              id="email"
              name="email"
              type="email"
              class="relative block w-full px-3 py-3 placeholder-gray-400 border appearance-none border-nike-grey text-nike-black focus:outline-none focus:ring-2 focus:ring-nike-black focus:border-nike-black sm:text-sm"
              placeholder="example@email.com"
            />
          </div>

          <div>
            <label
              for="phone"
              class="block mb-1 text-sm font-medium text-nike-black"
            >
              手机号
            </label>
            <input
              id="phone"
              name="phone"
              type="tel"
              pattern="[0-9]{11}"
              class="relative block w-full px-3 py-3 placeholder-gray-400 border appearance-none border-nike-grey text-nike-black focus:outline-none focus:ring-2 focus:ring-nike-black focus:border-nike-black sm:text-sm"
              placeholder="11位手机号"
            />
          </div>
        </div>

        <div class="flex items-center">
          <input
            id="agree-terms"
            name="agree-terms"
            type="checkbox"
            required
            class="w-4 h-4 rounded text-nike-black focus:ring-nike-black border-nike-grey"
          />
          <label
            for="agree-terms"
            class="block ml-2 text-sm text-nike-dark-grey"
          >
            我已阅读并同意
            <a href="/terms" class="text-nike-black hover:underline">用户协议</a
            >
            和
            <a href="/privacy" class="text-nike-black hover:underline"
              >隐私政策</a
            >
          </label>
        </div>

        <div>
          <button
            type="submit"
            class="relative flex justify-center w-full px-4 py-3 text-sm font-bold text-white uppercase transition-colors border border-transparent group bg-nike-black hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-nike-black"
          >
            注册
          </button>
        </div>
      </form>
    </div>
  </div>
</Layout>
