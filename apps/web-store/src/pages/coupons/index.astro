---
import Layout from '../../layouts/Layout.astro';
import { actions } from 'astro:actions';
import { getSession } from '../../lib/session';

const session = await getSession(Astro);
const isLoggedIn = !!session;

// 获取可领取的优惠券列表
const { data: availableCoupons, error } = await Astro.callAction(actions.coupon.getAvailable, {});

// 如果已登录，获取已领取的优惠券用于状态展示
let myCoupons = [];
if (isLoggedIn) {
    const { data } = await Astro.callAction(actions.coupon.getMyCoupons, { status: 'AVAILABLE' });
    myCoupons = data || [];
}

const isClaimed = (couponId: number) => {
    return myCoupons.some((mc: any) => Number(mc.couponId) === Number(couponId));
};
---

<Layout title="领券中心">
    <div class="py-12 bg-nike-grey min-h-screen">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Header Section -->
            <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-6">
                <div>
                    <h1 class="text-4xl md:text-6xl font-black italic uppercase tracking-tighter leading-none mb-4">
                        领券中心
                    </h1>
                    <p class="text-nike-dark-grey font-bold uppercase tracking-widest text-sm">
                        EXCLUSIVE OFFERS & DISCOUNTS FOR MEMBERS
                    </p>
                </div>
                <div class="flex gap-4">
                    <a href="/member/coupons" class="px-6 py-3 bg-white text-nike-black font-bold text-sm uppercase tracking-widest border-2 border-nike-black hover:bg-nike-black hover:text-white transition-all">
                        我的优惠券
                    </a>
                </div>
            </div>

            {error && (
                <div class="p-4 mb-8 text-red-600 bg-red-50 rounded border border-red-200">
                    {error.message}
                </div>
            )}

            <!-- Coupons Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {availableCoupons && availableCoupons.length > 0 ? (
                    availableCoupons.map((coupon: any) => {
                        const claimed = isClaimed(coupon.id);
                        return (
                            <div class="group relative bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border-2 border-transparent hover:border-nike-black flex flex-col h-full">
                                <!-- Top Section (Nike Black) -->
                                <div class="bg-nike-black p-8 text-white relative overflow-hidden shrink-0">
                                    <div class="relative z-10">
                                        <div class="flex justify-between items-start mb-6">
                                            <div class="px-3 py-1 bg-white/20 rounded text-[10px] font-black uppercase tracking-widest">
                                                {coupon.type === 1 && '满减券'}
                                                {coupon.type === 2 && '折扣券'}
                                                {coupon.type === 3 && '免邮券'}
                                            </div>
                                            <div class="text-[10px] font-bold opacity-60 uppercase tracking-tighter">
                                                No. {coupon.id.toString().padStart(6, '0')}
                                            </div>
                                        </div>
                                        
                                        <div class="mb-2">
                                            <span class="text-5xl font-black italic tracking-tighter">
                                                {coupon.type === 1 && `￥${parseFloat(coupon.value).toFixed(0)}`}
                                                {coupon.type === 2 && `${(parseFloat(coupon.value) * 10).toFixed(1)}折`}
                                                {coupon.type === 3 && '免邮'}
                                            </span>
                                        </div>
                                        
                                        <p class="text-sm font-bold opacity-80 uppercase tracking-widest">
                                            {parseFloat(coupon.minAmount) > 0 ? `满 ￥${parseFloat(coupon.minAmount).toFixed(0)} 可用` : '无门槛限定'}
                                        </p>
                                    </div>

                                    <!-- Big Background Text -->
                                    <div class="absolute -right-4 -bottom-8 text-8xl font-black italic opacity-10 select-none pointer-events-none uppercase">
                                        NIKE
                                    </div>
                                </div>

                                <!-- Bottom Section -->
                                <div class="p-8 flex flex-col flex-1">
                                    <h3 class="text-xl font-black uppercase tracking-tight mb-4 group-hover:text-nike-black transition-colors">
                                        {coupon.name}
                                    </h3>
                                    
                                    <div class="space-y-3 mb-8 flex-1">
                                        <div class="flex items-start text-xs text-nike-dark-grey">
                                            <svg class="w-4 h-4 mr-2 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                            </svg>
                                            <p class="leading-relaxed">{coupon.description || '全场通用，快来领取属于你的专属优惠。'}</p>
                                        </div>
                                        {coupon.endTime && (
                                            <div class="flex items-center text-xs text-nike-dark-grey">
                                                <svg class="w-4 h-4 mr-2 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                </svg>
                                                截止日期：{new Date(coupon.endTime).toLocaleDateString('zh-CN')}
                                            </div>
                                        )}
                                    </div>

                                    <button
                                        data-coupon-id={coupon.id}
                                        data-claimed={claimed}
                                        class={`claim-btn w-full py-4 text-sm font-black uppercase tracking-widest border-2 transition-all duration-300 relative z-20 ${
                                            claimed 
                                            ? 'bg-nike-grey border-nike-grey text-nike-dark-grey cursor-not-allowed' 
                                            : 'bg-white border-nike-black text-nike-black hover:bg-nike-black hover:text-white'
                                        }`}
                                        disabled={claimed}
                                    >
                                        {claimed ? '已领取' : '立即领取'}
                                    </button>
                                </div>

                                <!-- Decorative Elements (Punch holes on the tear line) -->
                                <div class="absolute top-[184px] -left-3 w-6 h-6 bg-nike-grey rounded-full z-10"></div>
                                <div class="absolute top-[184px] -right-3 w-6 h-6 bg-nike-grey rounded-full z-10"></div>
                            </div>
                        )
                    })
                ) : (
                    <div class="col-span-full py-32 text-center bg-white rounded-2xl border-2 border-dashed border-nike-grey">
                        <div class="mb-6 inline-flex items-center justify-center w-24 h-24 rounded-full bg-nike-grey">
                            <svg class="w-12 h-12 text-nike-dark-grey" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4v-3a2 2 0 00-2-2H5z" />
                            </svg>
                        </div>
                        <h3 class="text-2xl font-black uppercase tracking-tight mb-2">暂无可领取优惠券</h3>
                        <p class="text-nike-dark-grey mb-8">请关注后续活动，更多惊喜等着你</p>
                        <a href="/" class="px-8 py-4 bg-nike-black text-white font-black uppercase tracking-widest hover:bg-gray-800 transition-all">
                            返回首页
                        </a>
                    </div>
                )}
            </div>
        </div>
    </div>
</Layout>

<script>
    import { actions } from 'astro:actions';

    const claimBtns = document.querySelectorAll('.claim-btn');
    
    claimBtns.forEach(btn => {
        btn.addEventListener('click', async () => {
            const couponId = btn.getAttribute('data-coupon-id');
            const isClaimed = btn.getAttribute('data-claimed') === 'true';

            if (!couponId || isClaimed) return;

            // 检查是否登录
            // 这里可以更优雅地处理，比如跳转到登录页
            
            btn.classList.add('opacity-50', 'cursor-wait');
            const originalText = btn.textContent;
            btn.textContent = '领取中...';

            try {
                const { data, error } = await actions.coupon.claim({ id: Number(couponId) });
                
                if (error) {
                    if (error.message.includes('登录')) {
                        window.location.href = `/login?redirect=${window.location.pathname}`;
                        return;
                    }
                    alert(error.message || '领取失败，请稍后重试');
                    btn.classList.remove('opacity-50', 'cursor-wait');
                    btn.textContent = originalText;
                    return;
                }

                // 领取成功
                btn.setAttribute('data-claimed', 'true');
                btn.setAttribute('disabled', 'true');
                btn.classList.remove('bg-white', 'border-nike-black', 'text-nike-black', 'hover:bg-nike-black', 'hover:text-white', 'opacity-50', 'cursor-wait');
                btn.classList.add('bg-nike-grey', 'border-nike-grey', 'text-nike-dark-grey', 'cursor-not-allowed');
                btn.textContent = '领取成功';
                
                // 3秒后变更为“已领取”
                setTimeout(() => {
                    btn.textContent = '已领取';
                }, 3000);

            } catch (e) {
                console.error('领取出错:', e);
                alert('系统繁忙，请稍后重试');
                btn.classList.remove('opacity-50', 'cursor-wait');
                btn.textContent = originalText;
            }
        });
    });
</script>
