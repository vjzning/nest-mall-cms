---
import '../styles/global.css';
import { actions } from 'astro:actions';
import { Cart } from '../components/nike/CartButton';
import UserMenu from '../components/nike/UserMenu.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;

// 在服务器端预获取购物车数据
const result = await Astro.callAction(actions.cart.getCart, new FormData());
const initialCartData = result.data?.success ? result.data : null;
---

<!doctype html>
<html lang='zh-CN'>
    <head>
        <meta charset='UTF-8' />
        <meta name='description' content='Nike Storefront Prototype' />
        <meta name='viewport' content='width=device-width' />
        <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
        <meta name='generator' content={Astro.generator} />
        <title>{title} | Nike Prototype</title>
    </head>
    <body>
        <!-- Top Bar -->
        <!-- <div
      class="bg-nike-grey text-[10px] font-bold py-1 px-4 sm:px-12 flex justify-end gap-4 border-b border-gray-200"
    >
      <a href="#" class="hover:opacity-70">查找门店</a>
      <span>|</span>
      <a href="#" class="hover:opacity-70">帮助</a>
      <span>|</span>
      <a href="#" class="hover:opacity-70">加入思绪</a>
      <span>|</span>
      <a href="#" class="hover:opacity-70">登录</a>
    </div> -->

        <!-- Main Header -->
        <header
            class='sticky top-0 z-50 transition-all bg-white border-b border-nike-grey'
        >
            <nav
                class='max-w-[1920px] mx-auto px-4 sm:px-12 h-16 flex items-center justify-between'
            >
                <div class='flex items-center gap-12'>
                    <a href='/' class='flex-shrink-0'>
                        <svg
                            width='60'
                            height='22'
                            viewBox='0 0 24 24'
                            fill='currentColor'
                        >
                            <path d='M21 12l-18 6v-12l18 6z'></path>
                        </svg>
                    </a>
                    <div
                        class='hidden lg:flex items-center gap-6 font-bold text-[15px] tracking-tight'
                    >
                        <a
                            href='/'
                            class='flex items-center h-16 transition-all hover:border-b-2 border-nike-black'
                            >首页</a
                        >
                        <a
                            href='/flash-sale'
                            class='flex items-center h-16 transition-all hover:border-b-2 border-nike-black'
                            >秒杀</a
                        >
                        <a
                            href='/coupons'
                            class='flex items-center h-16 transition-all hover:border-b-2 border-nike-black'
                            >优惠券</a
                        >
                    </div>
                </div>

                <div class='flex items-center gap-4'>
                    <div class='relative hidden md:block group'>
                        <form action='/search' method='get'>
                            <div
                                class='flex items-center px-10 py-2 text-sm transition-colors rounded-full bg-nike-grey hover:bg-gray-200'
                            >
                                <button type='submit' class='focus:outline-none'>
                                    <svg
                                        class='w-5 h-5 mr-2 text-nike-black'
                                        fill='none'
                                        stroke='currentColor'
                                        viewBox='0 0 24 24'
                                    >
                                        <path
                                            stroke-linecap='round'
                                            stroke-linejoin='round'
                                            stroke-width='2'
                                            d='M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z'
                                        ></path>
                                    </svg>
                                </button>
                                <input
                                    type='text'
                                    name='q'
                                    placeholder='搜索'
                                    class='w-32 transition-all duration-300 bg-transparent border-none focus:outline-none group-hover:w-48'
                                />
                            </div>
                        </form>
                    </div>
                    <a
                        href='/member/favorites'
                        class='relative p-2 rounded-full hover:bg-nike-grey transition-colors'
                        title='我的收藏'
                    >
                        <svg
                            class='w-6 h-6'
                            fill='none'
                            stroke='currentColor'
                            viewBox='0 0 24 24'
                        >
                            <path
                                stroke-linecap='round'
                                stroke-linejoin='round'
                                stroke-width='2'
                                d='M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z'
                            ></path>
                        </svg>
                    </a>
                    <Cart client:load initialData={initialCartData} />
                    <UserMenu />
                </div>
            </nav>
        </header>

        <main>
            <slot />
        </main>

        <footer class='px-4 py-12 mt-20 text-white bg-nike-black sm:px-12'>
            <div class='max-w-[1920px] mx-auto'>
                <div
                    class='grid grid-cols-1 gap-12 mb-16 md:grid-cols-4 lg:grid-cols-6'
